{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="row">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="row">
        <label class="col-xs-5" for="username">{{ 'security.login.username'|trans }}</label>
        <input class="col-xs-7" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="row">
        <label class="col-xs-5" for="password">{{ 'security.login.password'|trans }}</label>
        <input class="col-xs-7" type="password" id="password" name="_password" required="required" />
    </div>

    <div class="row">
        <label class="col-xs-7" for="remember_me">
                <input class="" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans }}
        </label>
        <input type="submit" class="col-xs-5 btn btn-success" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>

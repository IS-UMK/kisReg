{% extends 'base.html.twig' %}

{% block bodyTopMenu %}{% endblock %}
{% block body %}
    <h1>Zajecia</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zajecia.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
                <td>{{ zajecia.nazwa }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ zajecia.opis }}</td>
            </tr>
            <tr>
                <th>Poczatek</th>
                <td>{% if zajecia.poczatek %}{{ zajecia.poczatek|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Koniec</th>
                <td>{% if zajecia.koniec %}{{ zajecia.koniec|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Limitmiejsc</th>
                <td>{{ zajecia.limitMiejsc }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_zajecia_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_zajecia_edit', { 'id': zajecia.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
